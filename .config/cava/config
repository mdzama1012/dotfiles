# cava gruvbox color scheme by Mohammad Zama.

[general]
mode = normal              # Smoothing mode: normal (alternatives: scientific, waves)
framerate = 60             # FPS
autosens = 1               # Enable auto sensitivity
overshoot = 20             # Overshoot percentage
sensitivity = 100          # Manual sensitivity (%)
bars = 0                   # 0: auto bar count
bar_width = 2              # Bar width in characters
bar_spacing = 1            # Space between bars (chars)
lower_cutoff_freq = 50     # Lower frequency cutoff (Hz)
higher_cutoff_freq = 10000 # Higher frequency cutoff (Hz)
sleep_timer = 0            # Disable sleep (0 = off)

[input]
method = pulse             # Audio input method (pulse/alsa/fifo/shmem/portaudio)
source = auto              # Auto-select default source

[output]
method = ncurses           # ncurses output method (default)
channels = stereo          # Visual channels: stereo (alternatives: mono)
mono_option = average      # For mono output, average the left/right channels

[color]
foreground = '#fbf1c7'
gradient = 1
gradient_count = 8
gradient_color_1 = '#fb4934'  #red
gradient_color_2 = '#fe8019'  #orange
gradient_color_3 = '#fabd2f'  #yellow
gradient_color_4 = '#b8bb26'  #green
gradient_color_5 = '#8ec07c'  #aqua
gradient_color_6 = '#83a598'  #blue
gradient_color_7 = '#d3869b'  #purple
gradient_color_8 = '#a89984'  #gray accent

[smoothing]
integral = 77              # Integral smoothing value (0 disables)
gravity = 100              # Gravity for bar drop-off (%)
ignore = 0                 # Minimum bar height threshold
